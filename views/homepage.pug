extends layout

block content
  h1= title
  table.table.table-striped
    thead
      tr
        th
        th Author
        th Genre
        th Description
    tbody
      for book in books
        tr.row
          td
            img(src=`${book.image_url}`)
            p #{book.title}
          td
            -var description = book.description ? book.description : 'No description available'
              p  #{description.slice(0,300)}
          td
            for author in book.authors
              p #{author.name}
